---
import { getCollection } from 'astro:content';
interface Item {
  text1: string;
  text2: string;
}

interface Package {
  image: string;
  alt: string;
  title: string;
  description: string;
}

export interface Props {
  title?: string;
  items?: Array<Array<Item>>;
  packages?: Array<Array<Package>>;
}

const packageList = await getCollection('packages', ({ data }) => {
  return data.draft !== true;
});

const { title = await Astro.slots.render('title'), items = [], packages = [] } = Astro.props;
---

<section class="scroll-mt-16 px-20" id="supercharge">
  <div>
    <div class="title text-center px-4 pt-28 pb-16 mx-auto max-w-6xl lg:px-8 lg:pt-32 lg:pt-40">
      {
        title && (
          <h2
            class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading"
            set:html={title}
          />
        )
      }
    </div>

    <div class="flex flex-wrap mb-10">
      {
        items.map((subitems) => (
          <div class="flex flex-wrap md:flex-nowrap">
            <div class="grid md:grid-cols-2">
            {subitems.map(({ text1, text2 }) => (
                <div class="m-4">
                  <p class="text-muted dark:text-slate-400" set:html={text1} />
                </div>
                <div class="m-4">
                  <p class="text-muted dark:text-slate-400" set:html={text2} />
                </div>
              
            ))}
            </div>         
            </div>
          
        ))
      }
    </div>

    <div class="package-blocks flex flex-wrap justify-center">
      <div class="flex flex-row flex-wrap justify-center">
        {
          packageList.map((packages) => (
            <div class="flex md:w-72 flex-col  m-1 border border-slate-700 dark:border-slate-500 md:h-[42rem] h-fit justify-center">
              <div class="flex relative h-[16rem] md:h-[24rem]">
                <div class="mb-4 absolute top-0">
                  <img src="../src/assets/images/texture-header.jpg" />
                </div>
                <div class="absolute left-0 top-10">
                  <img src="../src/assets/images/Filming-Yourself-12fps-White-bg.gif" class="min-w-[50%]" />
                </div>
              </div>

              <div class="flex-auto pt-6 px-4">
                <h3 class="text-center text-2xl font-bold" set:html={packages.data.title} />
                <p class="text-center py-2" set:html={packages.data.description} />
              </div>

              <div class=" relative flex justify-center">
                <button class="my-8 px-8 py-2 bg-indigo-900 rounded text-white font-bold">PACKAGES</button>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
